@model IEnumerable<CNPMnangcao.Models.SACH>

@helper Truncate(string input, int length)
    {
        if (input.Length < length)
        {
            @input
        }
        else
        {
            @input.Substring(0, length)<text>...</text>
        }
}

@{
    ViewBag.Title = "Sach";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Quản Lý Thông Tin Sách</h2>
<p>
    @Html.ActionLink("Thêm Mới", "Themsachmoi", "Sach")
</p>
<table id="table_id" class="table" border="1">
    <thead>
        <tr>
            <th style="width: 150px ">
                Tên Sách
            </th>
            <th style="width: 150px ">
                Đơn Vị Tính
            </th>
            <th style="width: 120px ">
                Giá Bán
            </th>
            <th style="width: 200px ">
                Mô Tả
            </th>
            <th style="width: 150px ">
                Hình ảnh
            </th>
            <th style="width: 100px ">
                Mã Chủ đề
            </th>
            <th style="width: 100px ">
                Mã NXB
            </th>
            <th style="width: 130px ">
                Ngày Cập Nhật
            </th>
            <th style="width: 150px ">
                Số lượng bán
            </th>
            <th style="width: 150px ">
                Số lần xem
            </th>
            <th style="width: 70px ">
                Mới
            </th>

            <th style="width: 150px ">
                Tên Chủ Đề
            </th>
            <th style="width: 150px ">
                Tên NXB
            </th>
            <th style="width: 200px"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Tensach)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Donvitinh)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Dongia)
            </td>
            <td>
                @Truncate(item.Mota, 100)
            </td>
            <td>
                <img src="@Url.Content("~/images/" + item.Hinhminhhoa)" style="max-height:120px" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaCD)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaNXB)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ngaycapnhat)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Soluongban)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.solanxem)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.moi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CHUDE.TenChuDe)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NHAXUATBAN.TenNXB)
            </td>
            <td>
                @Html.ActionLink("Sửa", "Suasach", new { id = item.Masach }) |
                @Html.ActionLink("Chi Tiết", "Chitietsach", new { id = item.Masach }) |
                @Html.ActionLink("Xóa", "Xoasach", new { id = item.Masach })
            </td>
        </tr>
}
    </tbody>
</table>
