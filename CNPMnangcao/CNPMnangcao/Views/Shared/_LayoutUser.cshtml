<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/templatemo_style.css" rel="stylesheet" />
    <title>@ViewBag.Title</title>
</head>
<body>
    <h4 style="text-align: center">Nguyễn Thị Mỹ Dân</h4>

    <div>

        <div id="templatemo_container" style="width:1300px">
            <div id="templatemo_menu">
                <ul>
                    <li><a href="#" class="current">@Html.ActionLink("Home", "Index", "BookStore")</a></li>
                    <li><a href="#">@Html.ActionLink("Search", "Index", "BookStore")</a></li>
                    <li><a href="#">@Html.ActionLink("Books", "Index", "BookStore")</a></li>
