@model CNPMnangcao.Models.SACH
@{
    ViewBag.Title = "Themsachmoi";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Thêm Sách </h2>

@using (Html.BeginForm("Themsachmoi", "Sach", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">

    <hr />
    @Html.ValidationSummary(true)
 
    <div class="form-group">
        @Html.Label("Tên Sách", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Tensach)
            @Html.ValidationMessageFor(model => model.Tensach)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Donvitinh, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Donvitinh)
            @Html.ValidationMessageFor(model => model.Donvitinh)
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Giá", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Dongia)
            @Html.ValidationMessageFor(model => model.Dongia)
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Mô tả", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Mota)
            @Html.ValidationMessageFor(model => model.Mota)
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Hình ảnh", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <input type="file" name="fileupload" />
            @ViewBag.Thongbao
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Mã Chủ đề", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("MaCD")
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.MaNXB, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("MaNXB")
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Ngày Cập nhật", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <input type="date" name="Ngaycapnhat" />
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Số lượng bán", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Soluongban)
            @Html.ValidationMessageFor(model => model.Soluongban)
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Số lần xem", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.solanxem)
            @Html.ValidationMessageFor(model => model.solanxem)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.moi, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.moi)
            @Html.ValidationMessageFor(model => model.moi)
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="THÊM MỚI" class="btn btn-default" />
        </div>
    </div>
</div>
}
<div>
    @Html.ActionLink("Back to List", "Sach", "Sach")
</div>
